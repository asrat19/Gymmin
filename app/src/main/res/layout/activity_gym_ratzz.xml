<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.asrat19stanford.gymmin.gymRatzz">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Gymmin?"
        android:textSize="40dp"
        android:textColor="#0000AA"
        android:id="@+id/gymin"
        android:layout_centerHorizontal="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Workouts"
        android:onClick="workouts"
        android:padding="30dp"
        android:id="@+id/work"
        android:layout_above="@+id/schedule"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Schedule"
        android:onClick="calendar"
        android:padding="30dp"
        android:id="@+id/schedule"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Motivation"
        android:onClick="motivation"
        android:padding="30dp"
        android:id="@+id/motivation"
        android:layout_below="@+id/schedule"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Connect"
        android:onClick="connect"
        android:padding="30dp"
        android:id="@+id/connect"
        android:layout_below="@+id/motivation"
        android:layout_alignRight="@+id/motivation"
        android:layout_alignEnd="@+id/motivation" />


</RelativeLayout>
