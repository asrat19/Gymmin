<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.asrat19stanford.gymmin.screenTwo">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select the body part you wish to punish"
        android:textSize="18dp"
        android:paddingTop="10dp"
        android:id="@+id/punish"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chest"
        android:onClick="chosenWorkout"
        android:id="@+id/chest"
        android:layout_below="@+id/punish"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Back"
        android:id="@+id/back"
        android:onClick="chosenWorkout"
        android:layout_below="@+id/chest"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Shoulder"
        android:onClick="chosenWorkout"
        android:id="@+id/shoulder"
        android:layout_below="@+id/back"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Legs"
        android:onClick="chosenWorkout"
        android:id="@+id/legs"
        android:layout_below="@+id/shoulder"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Biceps"
        android:onClick="chosenWorkout"
        android:id="@+id/biceps"
        android:layout_below="@+id/legs"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Triceps"
        android:onClick="chosenWorkout"
        android:id="@+id/triceps"
        android:layout_below="@+id/biceps"
        android:layout_alignLeft="@+id/biceps"
        android:layout_alignStart="@+id/biceps" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cardio"
        android:onClick="chosenWorkout"
        android:id="@+id/cardio"
        android:layout_below="@+id/triceps"
        android:layout_centerHorizontal="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Return"
        android:onClick="returnToMain"
        android:id="@+id/button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
